<div class="header">
  <h1>tailwebs.</h1>
  <div class="nav-links">
    <a href="#">Home</a>
    <a> <%= button_to "Logout", session_path(@current_user), method: :delete, class: "logout-link" %></a>
  </div>
</div>
<div class="table-container">
  <% if @user.students.count != 0 %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Subject</th>
          <th>Mark</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @user.students.each do |student| %>
          <tr>
            <td><span class="avatar"><%= student.name[0].upcase %></span> <%= student.name %></td>
            <td><%= student.subject %></td>
            <td><%= student.marks %></td>
            <td>
              <div class="dropdown">
                <button class="dropbtn">â‹®</button>
                <div class="dropdown-content">
                  <%= link_to "Edit", edit_student_path(id: student.id), remote: true, class: "" %>
                  <%= button_to "Delete", student_path(id: student.id), method: :delete, class: "logout-link" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <b>No student listed, click on Add to create students</b><br>
    <br>
  <% end %>
  <%= link_to "Add", new_student_path(id: @user.id), remote: true, class: "add-button" %>
</div>
